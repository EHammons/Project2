<div class="container" id="theory-container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">{{example.text}}</h5>
            <h5><i class="fas fa-eye hidden"></i><i class="fas fa-eye hidden"></i></h5>
          <p class="description">
            {{example.description}}</p>
          <p>
